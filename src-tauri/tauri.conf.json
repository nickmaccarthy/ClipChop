{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ClipChop",
  "version": "0.1.0",
  "identifier": "com.nickmac.clipchop",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "ClipChop",
        "width": 1280,
        "height": 900,
        "minWidth": 1100,
        "minHeight": 760,
        "center": true,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": false
  }
}
