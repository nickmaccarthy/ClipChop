{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ClipChop",
  "version": "0.1.0",
  "identifier": "com.nickmac.clipchop",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "ClipChop",
        "width": 1280,
        "height": 900,
        "minWidth": 1100,
        "minHeight": 760,
        "center": true,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/icon.png"
    ],
    "createUpdaterArtifacts": false
  }
}
